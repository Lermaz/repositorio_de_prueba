<div class="container p-4">
    <div class="row">
        {{#each pacientes}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <p class="m-2">{{nombre}} {{apellidopaterno}} {{apellidomaterno}}</p>
                    <p>{{timeago fecregistro}}</p>
                    <a href="/links/comentarios/{{id}}" class="btn btn-primary">Consultar</a>
                    <a href="/links/deletepacinte/{{id}}" class="btn btn-danger">Borrar</a>
                    <a href="/links/editpacientes/{{id}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes pacientes asignados</p>
                    <a href="/links/addpacientes">Registrar paciente</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>